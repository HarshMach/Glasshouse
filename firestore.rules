rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Articles - Read by anyone, write only by cloud functions
    match /articles/{articleId} {
      allow read: if true;
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Comments - Read by anyone, write with validation
    match /comments/{commentId} {
      allow read: if resource.data.reported == false;
      allow create: if request.resource.data.keys().hasAll(['articleId', 'userId', 'username', 'text', 'createdAt'])
                    && request.resource.data.text.size() > 0
                    && request.resource.data.text.size() <= 500;
      allow update, delete: if false; // Only Cloud Functions can update/delete
    }
    
    // Reports - Write only, read by admins only
    match /reports/{reportId} {
      allow read: if false; // Only admins via console
      allow create: if request.resource.data.keys().hasAll(['contentType', 'contentId', 'reason', 'reportedBy', 'createdAt']);
      allow update, delete: if false;
    }
    
    // Internal collections - No direct access
    match /rate_limits/{document=**} {
      allow read, write: if false;
    }
    
    match /circuit_breaker_state/{document=**} {
      allow read, write: if false;
    }
  }
}
